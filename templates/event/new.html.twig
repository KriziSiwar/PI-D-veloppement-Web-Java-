{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div  style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Add Event Backend ADMIN</h5>

                    <!-- General Form Elements -->
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                    
                        <div class="form-group">
                            <label for="inputText" class="col-sm-4 col-form-label">Title</label>
                            <div class="col-sm-10">
                                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            {{ form_errors(form.title, {'attr': {'class': 'text-danger'}}) }}
                        </div>

                        <div class="form-group">
                            <label for="inputText" class="col-sm-4 col-form-label">Description</label>
                            <div class="col-sm-10">
                                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            {{ form_errors(form.description, {'attr': {'class': 'text-danger'}}) }}
                        </div>



                        <div class="form-group">
                            <label for="inputText" class="col-sm-4 col-form-label">Start Date</label>
                            <div class="col-sm-10">
                                  {{ form_widget(form.start_date, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            {{ form_errors(form.start_date, {'attr': {'class': 'text-danger'}}) }}
                        </div>

                        
                        <div class="form-group">
                            <label for="inputText" class="col-sm-4 col-form-label">End Date</label>
                            <div class="col-sm-10">
                                {{ form_widget(form.end_date, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            {{ form_errors(form.end_date, {'attr': {'class': 'text-danger'}}) }}
                        </div>

                        <div class="form-group">
                            <label for="inputText" class="col-sm-4 col-form-label">Location</label>
                            <div class="col-sm-10">
                                {{ form_widget(form.location, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            {{ form_errors(form.location, {'attr': {'class': 'text-danger'}}) }}
                        </div>

                        <div class="form-group">
                            <label for="inputText" class="col-sm-4 col-form-label">Statut</label>
                            <div class="col-sm-10">
                                {{ form_widget(form.statut, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.statut, {'attr': {'class': 'text-danger'}}) }}
                            </div>
                        </div>


                        <div class="form-group">
                            <label for="inputText" class="col-sm-4 col-form-label">Number of Participants</label>
                            <div class="col-sm-10">
                                 {{ form_widget(form.nb_participant, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        {{ form_errors(form.nb_participant, {'attr': {'class': 'text-danger'}}) }}
                        </div>


                        <div class="form-group">
                            <label for="inputText" class="col-sm-4 col-form-label">Image</label>
                            <div class="col-sm-10">
                                  {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        {{ form_errors(form.image, {'attr': {'class': 'text-danger'}}) }}
                        </div>

                        <div class="form-group">
                            <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">
                                {{ form_row(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                            </div>
                        </div>

                    {{ form_end(form) }}

                </div>
            </div>

        </div>
    </div>
{% endblock %}
