                            {{ form_widget(form.end_date_time, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.end_date_time, {'attr': {'class': 'text-danger'}}) }}
                        </div>
                    </div>

                    <!-- Champ location -->
                    <div class="form-group row">
                        <label for="inputText" class="col-sm-4 col-form-label">Location</label>
                        <div class="col-sm-8">
                            {{ form_widget(form.location, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.location, {'attr': {'class': 'text-danger'}}) }}
                        </div>
                    </div>

                    <!-- Champ number_participants -->
                    <div class="form-group row">
                        <label for="inputText" class="col-sm-4 col-form-label">Number of Participants</label>
                        <div class="col-sm-8">
                            {{ form_widget(form.number_participants, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.number_participants, {'attr': {'class': 'text-danger'}}) }}
                        </div>
                    </div>

                    <!-- Champ status -->
                    <div class="form-group row">
                        <label for="inputText" class="col-sm-4 col-form-label">Status</label>
                        <div class="col-sm-8">
                            {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.status, {'attr': {'class': 'text-danger'}}) }}
                        </div>
                    </div>

                    <!-- Champ image -->
                    <div class="form-group row">
                        <label for="inputText" class="col-sm-4 col-form-label">Image</label>
                        <div class="col-sm-8">
                        {{ form_label(form.image, 'Image', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.image, {'attr': {'class': 'form-control-file'}}) }}
