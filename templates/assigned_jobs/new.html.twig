{% extends 'base1.html.twig' %}

{% block title %}Post a new job{% endblock %}

{% block links %}
    <li><a class="nav-link scrollto" href="{{ path('homepage') }}">Home</a></li>
    <li><a class="nav-link scrollto active" href="{{ path('app_posted_jobs_front') }}">Jobs</a></li>
    {% if app.user %}
        <li><a class="getstarted scrollto" href="#">{{ app.user.email }}</a></li>
    {% else %}
        <li><a class="getstarted scrollto" href="{{ path('app_login') }}">Login</a></li>
    {% endif %}
{% endblock %}

{% block body %}
    <main id="main">

        <!-- ======= Contact Section ======= -->
        <section id="contact" class="contact">

            <div class="container" data-aos="fade-up">

                <header class="section-header">
                    <h2>Assign user to your project</h2>
                    <p>Write your agreement details</p>
                </header>

                <div class="row gy-4">
                    <div class="message-flash">
                        {% for flash_error in app.flashes('verify_email_error') %}
                            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                        {% endfor %}
                    </div>
                    {{ form_start(form,{'attr':{'novalidate':'novalidate'  }}) }}
                    <div class="row gy-4">

                        <div>
                            {{ form_label(form.start_date) }}
                            {{ form_widget(form.start_date, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.start_date) }}
                        </div>

                        <div>
                            {{ form_label(form.end_date) }}
                            {{ form_widget(form.end_date, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.end_date) }}
                        </div>

                        <div>
                            {{ form_label(form.status) }}
                            {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.status) }}
                        </div>

                      

                        <div>
                            {{ form_label(form.no) }}
                            {{ form_widget(form.no, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.no) }}
                        </div>

                        <div class="col-md-12 text-center">
                            <button type="submit">Post</button>
                        </div>

                    </div>
                    {{ form_end(form) }}
                </div>

            </div>

        </section><!-- End Contact Section -->

    </main><!-- End #main -->
{% endblock %}
