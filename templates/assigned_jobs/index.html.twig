{% extends 'base.html.twig' %}

{% block body %}
    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Dashboard</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">My assignments</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->

        <section class="section dashboard">
            <div class="row">
                <!-- Recent Sales -->
                <div class="col-12">
                    <div class="card recent-sales overflow-auto">

                        <div class="filter mx-3">
                            <input class="datatable-input" placeholder="Search..." type="search"
                                   title="Search within table">
                        </div>

                        <div class="card-body">
                            <h5 class="card-title">List of jobs <span>|
                                            <a href="{{ path('app_posted_jobs_front') }}" class="icon text-center">
                                                Look for more <i class="bi  bi-file-earmark-person-fill text-success"></i>
                                            </a></span></h5>
                            <table class="table table-borderless">
                                <thead>
                                <tr>
                                 <th scope="col">Start Date</th>
                                    <th scope="col">End Date</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Responsible</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for assigned_job in assigned_jobs %}
                                    <tr>
                                        
                                        <td>{{ assigned_job.startDate|date('d-m-Y') }}</td>
                                        <td>{{ assigned_job.endDate|date('d-m-Y') }}</td>
                                        <td>{{ assigned_job.status }}</td>
                                        <td>{{ assigned_job.no }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                        </div>

                    </div>
                </div><!-- End Recent Sales -->
            </div>
        </section>

    </main><!-- End #main -->
{% endblock %}