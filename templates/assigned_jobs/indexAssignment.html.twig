{% extends 'base.html.twig' %}
{% block body %}
    <main id="main" class="main">

        <div class="pagetitle">
            <h1>Dashboard</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Assigned Jobs</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->

        <section class="section dashboard">
            <div class="row">
                <!-- Recent Sales -->
                <div class="col-12">
                    <div class="card recent-sales overflow-auto">

                        <div class="filter mx-3">
                            <input class="datatable-input" placeholder="Search..." type="search"
                                   title="Search within table">
                        </div>

                        <div class="card-body">
                            <h5 class="card-title">List of jobs </h5>
                            <table class="table table-borderless">
                                <thead>
                                <tr>
                                   
                                    <th scope="col">Start Date</th>
                                    <th scope="col">End Date</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Responsible</th>
                                    <th colspan="2" class="text-center">Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for assigned_job in assigned_jobs %}
                                    <tr>
                                       
                                        <td>{{ assigned_job.startDate|date('d-m-Y') }}</td>
                                        <td>{{ assigned_job.endDate|date('d-m-Y') }}</td>
                                        <td>{{ assigned_job.status }}</td>
                                        <td>{{ assigned_job.no }}</td>
                                        <td>
                                            <a href="{{ path('app_assigned_jobs_edit', {'id': assigned_job.id}) }}"
                                               class="icon text-center">
                                                <i class="bi bi-pencil-square text-warning"></i>
                                            </a>
                                        </td>
                                        <td>
                                            <div class="icon text-center">
                                                {{ include('assigned_jobs/_delete_form.html.twig') }}
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                        </div>

                    </div>
                </div><!-- End Recent Sales -->
            </div>
        </section>

    </main><!-- End #main -->
{% endblock %}