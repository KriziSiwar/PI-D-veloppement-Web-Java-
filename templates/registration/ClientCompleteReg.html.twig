{% extends 'base1.html.twig' %}




{% block body %}




          <div class="card"style=" width:60%;margin-top:120px;margin-left:50px">
            <div class="card-body">
              <h5 class="card-title">Complete your account</h5>
<style>
  .form-floating {
    margin-bottom: 20px; /* Adjust the value as needed */
  }
</style>
              <!-- Floating Labels Form -->
             {{ form_start(completeRegistrationForm) }}

                <div class="col-md-12" style="">
                  <div class="form-floating">
                                  {{ form_widget(completeRegistrationForm.JobTitle) }}

                    <label for="floatingName">Job TiTle </label>
                  </div>
                </div>
              
               
                <div class="col-12">
                  <div class="form-floating">
                    {{form_widget(completeRegistrationForm.ProfessionalOverview)}}
                    <label for="floatingTextarea">Professional Overview</label>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="col-md-12">
                    <div class="form-floating">
                      <input type="text" class="form-control" id="floatingCity" placeholder="City">
                      <label for="floatingCity">City</label>
                    </div>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="form-floating mb-3">
                   {{form_widget((completeRegistrationForm.Expertise))}}
                    <label for="floatingSelect">State</label>
                  </div>
                </div>
                <div class="col-md-2">
                  <div class="form-floating">
{{form_widget((completeRegistrationForm.Phone))}}
                    <label for="floatingZip">Phone Number</label>       
                    
                                   {{ form_errors(completeRegistrationForm.Phone) }}

                  </div>
           <div class="row mb-3">
                                      <label for="floatingZip">Profile Picture</label>       

               <div class="form-floating">
    {{ form_widget(completeRegistrationForm.ProfilePicture, {'attr': {'id': 'file-input'}}) }}
    <img id="preview"   class="rounded-circle">
</div>

                </div>
                </div>
                <div class="text-center">
                  <button type="submit" class="btn btn-primary">Submit</button>
                  <button type="reset" class="btn btn-secondary">Reset</button>
                </div>
                {{form_end(completeRegistrationForm)}}
     <!-- End floating Labels Form -->

            </div>
          </div>

          <script>
document.addEventListener('DOMContentLoaded', (event) => {
    document.getElementById('file-input').addEventListener('change', function(e) {
        var reader = new FileReader();
        reader.onload = function(e) {
            document.getElementById('preview').src = e.target.result;
        }
        reader.readAsDataURL(e.target.files[0]);
    });
});
</script>


{% endblock %}