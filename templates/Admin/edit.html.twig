{% extends 'base.html.twig' %}

{% block body %}
    <h1>Edit User</h1>

<div class="row">
    <div class="col-lg-6 offset-lg-3">

          <div class="card">
            <div class="card-body">


    {{ form_start(form) }}

                <div class="col-12">
                  <label for="inputNanme4" class="form-label">Your First Name</label>
                    {{ form_widget(form.FirstName) }}
                </div>
                
                <div class="col-12">
                  <label for="inputNanme4" class="form-label">Your Last Name</label>
                    {{ form_widget(form.LastName) }}
                </div>
                <div class="col-12">
                  <label for="inputEmail4" class="form-label">Email</label>
        {{ form_widget(form.email) }}
                </div>
               


 <div class="col-12">
                  <label for="inputEmail4" class="form-label">Profile Picture</label>
        {{ form_widget(form.ProfilePicture) }}
                </div>


                <div class="text-center">
                  <button type="submit" class="btn btn-primary">Submit</button>
                  <button type="reset" class="btn btn-secondary">Reset</button>
                </div>
    {{ form_widget(form._token) }}
{{ form_end(form, {'render_rest': false}) }}
    </div>
    </div>
    </div>

{% endblock %}
