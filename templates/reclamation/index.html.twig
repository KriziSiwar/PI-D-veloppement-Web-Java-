{% extends 'base1.html.twig' %}

{% block body %}
    <main>
        <div class="container">
            <style>
                .content-box {
                    margin-left: auto;
                    margin-right: auto;
                    max-width: 800px; /* Adjust the max-width as needed */
                    margin-top: 50px; /* Adjust the top margin as needed */
                    padding: 70px; /* Add padding as needed */
                }
            </style>

            <div class="content-box">
                <h1>Reclamation index</h1>

                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Freelancer</th>
                            <th>Objet</th>
                            <th>Contenu</th>
                            <th>Statut</th>
                            <th>Date_reclamation</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for reclamation in reclamations %}
                            <tr>
                                <td>{{ reclamation.id }}</td>
                                <td>
                                    {% for freelancer in reclamation.freelancer %}
                                        {{ freelancer.name }}{% if not loop.last %}, {% endif %}
                                    {% endfor %}
                                </td>
                                <td>{{ reclamation.objet }}</td>
                                <td>{{ reclamation.contenu }}</td>
                                <td>{{ reclamation.statut }}</td>
                                <td>{{ reclamation.dateReclamation ? reclamation.dateReclamation|date('Y-m-d') : '' }}</td>
                                <td>
                                    <a href="{{ path('app_reclamation_show', {'id': reclamation.id}) }}">show</a>
                                    <a href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}">edit</a>
                                    <a>{{ include('reclamation/_delete_form.html.twig') }}</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6">no records found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

                <a href="{{ path('app_reclamation_new') }}">Create new</a>
            </div>
        </div>
    </main>
{% endblock %}
