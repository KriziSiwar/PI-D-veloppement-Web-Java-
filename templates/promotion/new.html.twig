{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div  style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Add Promotion Backend ADMIN</h5>

                    <!-- General Form Elements -->
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                    
                        

                        <div class="form-group">
                            <label for="inputText" class="col-sm-4 col-form-label">QR Code</label>
                            <div class="col-sm-10">
                                {{ form_widget(form.QR_code, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            {{ form_errors(form.QR_code, {'attr': {'class': 'text-danger'}}) }}
                        </div>

                        <div class="form-group">
                            <label for="inputText" class="col-sm-4 col-form-label">Discount</label>
                            <div class="col-sm-10">
                                  {{ form_widget(form.discount, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            {{ form_errors(form.discount, {'attr': {'class': 'text-danger'}}) }}
                        </div>

                        <div class="form-group">
                            <label for="inputText" class="col-sm-4 col-form-label">id Event</label>
                            <div class="col-sm-10">
                                {{ form_widget(form.event, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            {{ form_errors(form.event, {'attr': {'class': 'text-danger'}}) }}
                        </div>

                        <!-- Other form fields -->

                        <div class="form-group">
                            <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">
                                {{ form_row(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                            </div>
                        </div>

                    {{ form_end(form) }}

                </div>
            </div>

        </div>
    </div>
{% endblock %}
