{% extends 'base1.html.twig' %}
{% block body %}
    <main>
        <div class="container">
            <style>
                .content-box {
                   margin-left: auto;
                    margin-right: auto;
                    max-width: 600px; /* Adjust the max-width as needed */
                    margin-top: 50px; /* Adjust the top margin as needed */
                    padding: 70px; 
                }
            </style>

            <div class="content-box">
                <h1>Actualite index</h1>

                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Titre</th>
                            <th>Date_publication</th>
                            <th>Description</th>
                            <th>Categorie</th>
                            <th>Image</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for actualite in actualites %}
                            <tr>
                                <td>{{ actualite.id }}</td>
                                <td>{{ actualite.titre }}</td>
                                <td>{{ actualite.datePublication ? actualite.datePublication|date('Y-m-d') : '' }}</td>
                                <td>{{ actualite.description }}</td>
                                <td>{{ actualite.categorie }}</td>
                                <td>{{ actualite.image }}</td>
                                <td>
                                    <a href="{{ path('app_actualite_show', {'id': actualite.id}) }}">show</a>
                                    <a href="{{ path('app_actualite_edit', {'id': actualite.id}) }}">edit</a>
                                    <a>{{ include('actualite/_delete_form.html.twig') }}</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7">no records found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

                <a href="{{ path('app_actualite_new') }}">Create new</a>
            </div>
        </div>
    </main>
{% endblock %}
